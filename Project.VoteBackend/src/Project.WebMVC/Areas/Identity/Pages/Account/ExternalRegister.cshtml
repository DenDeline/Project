@page
@model Project.WebMVC.Areas.Identity.Pages.Account.ExternalRegister

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Username"></label>
        <input asp-for="Input.Username" class="form-control"/>
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Birthday"></label>
        <input asp-for="Input.Birthday" class="form-control"/>
        <span asp-validation-for="Input.Birthday" class="text-danger"></span>
    </div>
    <input type="hidden" class="form-control" asp-for="Input.ReturnUrl" value="@Model.ReturnUrl"/>
    <div class="mt-3">
        <button type="submit" class="btn btn-dark">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
