@page
@model Project.WebMVC.Areas.Identity.Pages.Account.Manage.Index

<h4>Profile</h4>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input class="form-control" asp-for="Input.Username" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input class="form-control" asp-for="Input.PhoneNumber"/>
            </div>
            <div class="form-group">
                <label asp-for="Input.LanguageId"></label>
                <select class="form-control" asp-for="Input.LanguageId" asp-items="Model.Languages"></select>
            </div>
            <button class="btn btn-dark" type="submit">Save</button>
        </form>
    </div>
</div>